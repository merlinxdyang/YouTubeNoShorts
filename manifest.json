{
  "manifest_version": 3,
  "name": "YouTubeNoShorts",
  "version": "2.1.0",
  "description": "Completely block YouTube Shorts: route redirect, UI cleanup, click interception, and Shorts API blocking. Click icon to toggle ON/OFF. | 彻底屏蔽 YouTube Shorts，点击图标可开关。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://youtube.com/*",
    "https://*.youtube.com/*",
    "http://youtube.com/*",
    "http://*.youtube.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "shorts_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://youtube.com/*",
        "https://*.youtube.com/*",
        "http://youtube.com/*",
        "http://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}